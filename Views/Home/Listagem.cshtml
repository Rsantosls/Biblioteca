@model List<Login>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Listagem de Livros";
}
<div class="row">
    <div class="col-md-12">
        @if (Model.Count == 0)
        {
            <br>
            <h3 style="text-align: center;">Nenhum registro encontrado.</h3>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Usuario</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Login l in Model)
                    {
                        <tr>
                            <td>@l.Id</td>
                            <td>@l.Nome</td>
                            <td>@l.Usuario</td>                            
                            <td><a href="/Home/Edicao/@l.Id">Editar</a></td>
                            @if(l.Id != 1)
                            {
                                <td><a href="/Home/Remover?Id=@l.Id">Exluir</a></td>
                            }     
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>