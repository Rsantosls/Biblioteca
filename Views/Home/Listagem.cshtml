@model List<Login>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Listagem de Livros";
}
<div class="row">
    <div class="col-md-12">
        @if (Model.Count == 0)
        {
            <br>
            <h3 style="text-align: center;">Nenhum registro encontrado.</h3>
        }
        else
        {
            <table class="table table-dark table-striped" style="text-align: center;">
                <thead class="table-dark table-bordered border-light">
                    <tr>
                        <th class="col-1">Id</th>
                        <th class="col-4">Nome</th>
                        <th class="col-4">Usuario</th>
                        <th class="col-3"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Login l in Model)
                    {
                        <tr>
                            <td>@l.Id</td>
                            <td>@l.Nome</td>
                            <td>@l.Usuario</td>
                            @if (l.Id != 1)
                            {
                                <td>
                                    <a class="btn btn-light" href="/Home/Edicao/@l.Id">Editar</a>
                                    <a class="btn btn-danger" href="/Home/Remover?Id=@l.Id">Exluir</a>
                                </td>
                            }
                            else
                            {
                                <td><a class="btn btn-light" href="/Home/Edicao/@l.Id">Editar</a></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>